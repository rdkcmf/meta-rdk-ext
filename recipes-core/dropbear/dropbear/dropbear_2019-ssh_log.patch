+void ssh_logging(const char* format, ...) {
+    FILE* fp = NULL;
+    fp = fopen(SSH_SHELL_LOG, "a+");
+    if (fp != NULL) {
+        char printbuf[1024];
+        va_list param;
+        va_start(param, format);
+        vsnprintf(printbuf, sizeof(printbuf), format, param);
+        fprintf(fp, "%s", printbuf);
+        va_end(param);
+        fclose(fp);
+    }
+    else {
+        fprintf(stderr, "Error opening file \n");
+    }
